{
  "mcpServers": {
    "weather_server": {
      "command": "python",
      "args": ["path/to/weather_server.py"],
      "env": {
        "WEATHER_API_KEY": "${WEATHER_API_KEY}"
      },
      "disabled": false
    },
    "file_manager": {
      "command": "node",
      "args": ["path/to/file_manager.js"],
      "disabled": true
    },
    "database_tools": {
      "command": "python",
      "args": ["path/to/database_server.py"],
      "env": {
        "DB_CONNECTION_STRING": "${DB_CONNECTION_STRING}"
      },
      "disabled": true
    },
    "tavily_mcp": {
      "command": "npx",
      "args": ["-y", "tavily-mcp@0.2.1"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "disabled": false
    },
    "baidu_map": {
      "command": "npx",
      "args": ["-y", "@baidumap/mcp-server-baidu-map"],
      "env": {
        "BAIDU_MAP_API_KEY": "${BAIDU_MAP_API_KEY}"
      },
      "disabled": false
    }
  }
}